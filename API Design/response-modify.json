{
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema",
  "id" : "http://jsonschema.net",
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time"
    }
  },
  "oneOf": [
    {
      "properties": {
        "answerNumber": {
          "type": "integer",
          "minimum": 0
        }
      },
      "required": ["answerNumber"]
    },
    {
      "properties": {
        "answerText": {
          "type": "string"
        }
      },
      "required": ["answerText"]
    }
  ],
  "required": ["timestamp"]
}